abstract contract ReentrancyGuard {
    uint256 private constant _NOT_ENTERED = 1;
    uint256 private constant _ENTERED = 2;
    uint256 private _status;
    constructor () {
        _status = _NOT_ENTERED;
    }

    modifier nonReentrant() {
        require(_status != _ENTERED, "ReentrancyGuard: reentrant call");
        _status = _ENTERED;
        _;
        _status = _NOT_ENTERED;
    }
}


contract raisinMinter is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    IRaisin public raisin = IRaisin(0x2874c8073F86BDe3D61B5fB79B249079B4420ce7);

    uint256[] public mintPrices = [0.1 ether, 0.1 ether, 0.01 ether, 0.1 ether, 100 ether];
    IERC20[] public mintTokens = 
        [
            IERC20(0x9076C15D7b2297723ecEAC17419D506AE320CbF1), //sw grape lp
            IERC20(0xb382247667fe8CA5327cA1Fa4835AE77A9907Bc8), //tj grape lp
            IERC20(0x95CED7c63eA990588F3fd01cdDe25247D04b8D98), // xgrape
            IERC20(0x1A3b20040dD5C890f247a5fb6C078B9943FfaA40), // vintage lp
            IERC20(0x000000000000000000000000000000000000dEaD)
        ];

    address public treasury = 0xf29fD03Df2Cb7F81d8Ae4d10A76f8b1C898786BD;

    receive() external payable {
        revert("Contract not payable");
    }

    modifier checkOperator() {
        require(
            IRaisin(raisin).operator() == address(this), 
            "Minter not operator"
        );
        _;
    }

    function mint(uint256 amount, uint256 level) external nonReentrant checkOperator {

        require(amount >= 0.01 ether && level <= mintPrices.length, "Minimum 0.1 token per mint or level doesn't exist");
        require(mintTokens[level].balanceOf(msg.sender) >= amount, "Insufficient balance");
        require(mintTokens[level].allowance(msg.sender, address(this)) >= amount, "Insufficient allowance");

        uint256 tokensToMint = (amount * 1e18).div(mintPrices[level]);

        mintTokens[level].safeTransferFrom(msg.sender, treasury, amount);

        IRaisin(raisin).mint(msg.sender, tokensToMint);

        emit mintedRaisins(block.timestamp, tokensToMint);
    }

    function conversion(uint256 amount, uint256 level) public view returns (uint256) {
        return (amount * 1e18).div(mintPrices[level]);
    }

    function updateMintValues(uint256[] memory _mintPrices, IERC20[] memory _mintTokens) external onlyOwner {
        require(mintPrices.length == _mintPrices.length, "Adjust Input Length");
        mintPrices = _mintPrices;
        mintTokens = _mintTokens;
        emit updatedTokens(block.timestamp, mintPrices, mintTokens);
    }

    function updateTreasury(address _treasury) external onlyOwner {
        treasury = _treasury;
        emit updatedTreasury(block.timestamp, treasury);
    }

    function updateRaisin(IRaisin _raisin) external onlyOwner {
        raisin = _raisin;
        emit updatedRaisin(block.timestamp, raisin);
    }
    
    function withdrawTokens(IERC20 _token) external onlyOwner {
        _token.transfer(msg.sender, _token.balanceOf(address(this)));
    }

    event updatedTokens(uint256 timestamp, uint256[] newPrices, IERC20[] newTokens);
    event updatedTreasury(uint256 timestamp, address newTreasury);
    event updatedRaisin(uint256 timestamp, IRaisin newRaisin);
    event mintedRaisins(uint256 timestamp, uint256 amount);

}
